<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Status: Idle"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textViewAccelerometerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewAccelerometerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="X: 0.0, Y: 0.0, Z: 0.0" />

    <TextView
        android:id="@+id/textViewGyroscopeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewGyroscopeData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="X: 0.0, Y: 0.0, Z: 0.0" />

    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start BLE Service" />

    <Button
        android:id="@+id/stopServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Stop BLE Service" />

</LinearLayout>
